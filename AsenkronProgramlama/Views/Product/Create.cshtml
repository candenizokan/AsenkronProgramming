

@model CreateProductVM

<div class="row">
    <div class="card col-md-8 offset-2">
        <div class="card-header">
            <h4>Ürün Oluşturma Panali</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="form-control"></label>
                    <input asp-for="Name" class="form-control" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-control"></label>
                    <input asp-for="Description" class="form-control" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="form-control"></label>
                    <input asp-for="Stock" class="form-control" type="text" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryID" class="form-control"></label>
                    <select asp-for="CategoryID" asp-items="@ViewBag.Categories" class="form-control">
                        <option value="0">Kategori Seçiniz</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                   <input type="submit" class="btn btn-success" value="Oluştur" />
                </div>
            </form>
        </div>
    </div>
</div>
